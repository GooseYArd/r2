
passenger.args := \
	       --auto \
	       --apxs2-path=$(pfx)/bin/apxs \
	       --apr-config-path=$(pfx)/bin/apr-1-config

.passenger.patch:
	for i in $(CWD)/passenger-*.patch; do patch -p0 < $$i; done
	touch $@

.passenger.install: .passenger.patch .httpd.install .curl.install .openssl.install .zlib.install .pcre.install        
	export PATH=$(pfx)/bin:$(PATH) && \
	export CFLAGS="$(CFLAGS) $(LDFLAGS)" && \
	export CXXFLAGS="$(CXXFLAGS)" && \
	export LDFLAGS="$(LDFLAGS)" && \
	install/bin/passenger-install-apache2-module $(passenger.args)
	touch $@

.passenger.clean:
	rm -f .passenger.*
GLOBAL_CLEAN += .passenger.clean
